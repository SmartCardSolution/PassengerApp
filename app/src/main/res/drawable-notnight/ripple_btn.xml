<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:color="#88FFFFFF"
    tools:ignore="MissingDefaultResource,NewApi"> <!-- Ripple color :: WHITE -->

    <item>
        <shape android:shape="rectangle">
            <corners android:radius="15dp"/>
            <gradient android:startColor="#F4511E" android:endColor="#5E35B1" android:angle="315" android:gradientRadius="3dp"/>
            <stroke android:color="@color/black" android:width="2dp"/>
        </shape>
    </item>

    <!-- Make sure the ripple doesn't exceed the bounds -->
    <item android:id="@android:id/mask"
        tools:ignore="NewApi">
        <shape android:shape="rectangle">
            <solid android:color="?android:colorAccent" />
        </shape>
    </item>
</ripple>