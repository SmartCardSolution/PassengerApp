<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.PassengerApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <!--Text Input Layout-->

    <style name="TEXTINPUTLAYOUT" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="itemRippleColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>
    <style name="TXT_VIEW_EDIT" parent="TextAppearance.AppCompat.Body2">
        <item name="android:textSize">15sp</item>
        <item name="hintTextColor">@color/white</item>
    </style>

    <color name="mtrl_textinput_default_box_stroke_color" tools:override="true">#ffffffff</color>

    <style name="NO_ACTION" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="LAYOUT" parent="CardView">
        <item name="background">@color/black</item>
    </style>

    <style name="BTN" parent="TextAppearance.AppCompat.Button">
        <item name="android:background">@drawable/ripple_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar" parent="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar">

        <item name="subtitleTextColor">@color/white</item>
        <item name="titleTextColor">#FFEA00</item>
        <item name="android:background">@color/purple_500</item>
        <item name="iconTint">@color/white</item>
    </style>

    <style name="TEXT_VIEW" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">#FFEA00</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="NO_INTERNET_DIALOG">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>